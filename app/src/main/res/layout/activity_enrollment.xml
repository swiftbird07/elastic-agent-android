<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bordered_background"
        android:padding="16dp"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Autofill from Enrollment String"
        android:textAppearance="?attr/textAppearanceListItem" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/btnLoadFromClipboard"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:text="Current Clipboard" />

        <Button
            android:id="@+id/btnLoadFromQR"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:text="QR Code/Camera"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnLoadFromConfig"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:text="Build Config" />
    </LinearLayout>
</LinearLayout>

<TextView
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:text="Server URL" />

<EditText
android:id="@+id/etServerUrl"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:inputType="textUri"/>

<TextView
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:text="Token"
android:layout_marginTop="8dp"/>

<EditText
android:id="@+id/etToken"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:inputType="text"/>

<TextView
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:text="Hostname"
android:layout_marginTop="8dp"/>

<EditText
android:id="@+id/etHostname"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:inputType="text"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Custom Root Certificate (optional)"
        />

<EditText
android:id="@+id/etFleetCert"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:inputType="text"/>


<androidx.appcompat.widget.SwitchCompat
android:id="@+id/swCheckCA"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:checked="true"
android:text="Verify Server Certificate" />

<androidx.appcompat.widget.SwitchCompat
android:id="@+id/swPinRootCA"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:text="Pin Root Certificate after Enrollment" />

<Button
android:id="@+id/btnEnrollNow"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginTop="16dp"
android:text="Enroll Now"/>

<TextView
android:id="@+id/textView3"
android:layout_width="match_parent"
android:layout_height="wrap_content" />

<TextView
    android:id="@+id/tStatus"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textAlignment="viewStart"
    android:textColor="#4CAF50"
    android:textStyle="bold" />

<TextView
android:id="@+id/tError"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:textAlignment="viewStart"
android:textColor="#F44336"
android:textStyle="bold" />

    </LinearLayout>
